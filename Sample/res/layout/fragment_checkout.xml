<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   
    
    tools:context="com.example.sample.MainActivity$PlaceholderFragment" >
	<EditText
     android:id="@+id/selectAddress"        
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:layout_marginTop="0dp"
  	
     android:layout_marginEnd="5dp"
     android:paddingTop="5dp"
     android:paddingBottom="5dp"
     android:paddingEnd="10dp"
     android:editable="false"
     android:text="@string/selectaddress"
     android:textColor="@color/inactive"
     android:background="@color/labelgrey"
    >
    </EditText>
    <EditText
     android:id="@+id/activeAddress"        
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
  	 android:layout_marginTop="50dp"
  	 android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     android:background="@drawable/textinput"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
     android:editable="false"
     android:text="@string/activeAddress"
     android:textColor="@color/activeRed"
    >
  </EditText>
  <EditText
     android:id="@+id/inactiveAddress"        
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
  	 android:layout_marginTop="200dp"
  	 android:layout_marginStart="30dp"
     android:layout_marginEnd="30dp"
     android:background="@drawable/textinput_inactive"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
     android:editable="false"
     android:text="@string/inActiveAddress"
     android:textColor="@color/inactive"
    >
    </EditText>
<Button
     android:layout_height="wrap_content"
     android:layout_width="match_parent"
     android:layout_alignParentBottom="true"
     android:text="@string/conti"
     android:onClick="selfDestruct"
     android:background="@color/activeRed" />
</RelativeLayout>
