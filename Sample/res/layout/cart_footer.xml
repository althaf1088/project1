<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
   
    android:orientation="vertical"
  	
    android:layout_alignParentBottom="true" 
     >
     <EditText 
     android:id="@+id/lblTotal" 
     android:layout_alignParentBottom="true" 
     android:layout_alignParentLeft="true"   
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_marginEnd="10dp"
     android:paddingStart="10dp"
     android:paddingTop="10dp"
     android:paddingBottom="10dp"
     android:paddingEnd="10dp"
     android:editable="false"
     android:background="#00000000"
     android:text="@string/billTotal"
     android:textColor="@color/activeRed"
    >
    </EditText>
    <EditText 
     android:id="@+id/lblValue" 
     android:layout_alignParentBottom="true"   
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:layout_toRightOf="@+id/lblTotal"
     android:layout_marginEnd="10dp"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
      android:paddingTop="10dp"
     android:paddingBottom="10dp"
     android:editable="false"
     android:background="#00000000"
     android:text="@string/billValue"
     android:textColor="@color/activeRed"
     
    >
    </EditText>
	<Button
     android:layout_height="wrap_content"
     android:layout_width="wrap_content"
     android:layout_alignParentBottom="true"
     android:layout_alignParentRight="true"
     android:layout_toRightOf="@+id/lblValue"
     android:layout_marginEnd="10dp"
     android:layout_marginTop="10dp"
      android:paddingTop="10dp"
     android:paddingBottom="10dp"
     android:layout_marginBottom="10dp"
     android:text="@string/checkout"
     android:paddingStart="10dp"
     android:paddingEnd="10dp"
    
     android:onClick="selfDestruct"
     android:background="@color/activeRed" />
</RelativeLayout>
